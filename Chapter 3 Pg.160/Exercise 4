Write an experssion that check whether the third bit in a given integer is 1 or 0.

namespace CheckBit
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("Enter an integer to determine if its third bit is 1 or" +
                " 0 : ");
            int check = int.Parse(Console.ReadLine());
            bool bit3 = (check & 8) != 0;
            if (bit3 == true)
            {
                Console.WriteLine("The third bit is 1");
            }
            else
            {
                Console.WriteLine("The thrid bit is 0");
            }
        }
    }
}
